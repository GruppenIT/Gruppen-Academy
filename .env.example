# Application
APP_ENV=development
APP_DEBUG=false
APP_SECRET_KEY=change-me-to-a-random-secret-key-min-32-chars

# Database (PostgreSQL)
POSTGRES_USER=gruppen
POSTGRES_PASSWORD=gruppen
POSTGRES_DB=gruppen_academy
DATABASE_URL=postgresql+asyncpg://gruppen:gruppen@db:5432/gruppen_academy

# Redis
REDIS_URL=redis://redis:6379/0

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o

# JWT
JWT_SECRET_KEY=change-me-to-a-random-jwt-secret-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Cookie (set to false for local dev without HTTPS)
COOKIE_SECURE=false

# Admin seed (password for the initial super_admin user: admin@gruppen.com.br)
ADMIN_SEED_PASSWORD=change-me

# Uploads (persistent volume â€” do NOT use /tmp)
UPLOAD_DIR=/data/uploads

# CORS
CORS_ORIGINS=["https://academy.gruppen.com.br","http://localhost:3000"]
